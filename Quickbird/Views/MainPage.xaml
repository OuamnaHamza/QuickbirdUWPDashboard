<Page x:Class="Quickbird.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Quickbird"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <Button Click="{x:Bind ViewModel.Login}"
                    Content="Login"
                    IsEnabled="{x:Bind ViewModel.LoginEnabled, Mode=OneWay}" />
            <Button Click="{x:Bind ViewModel.DeleteCreds}" Content="Delete Creds" />
            <TextBox Text="{x:Bind ViewModel.Token, Mode=OneWay}" />
            <Button Click="{x:Bind ViewModel.UpdateData}" Content="Update Database" />
            <TextBox Text="{x:Bind ViewModel.DatabaseErrors, Mode=OneWay}" />

            <Button Click="{x:Bind ViewModel.PostSensorData}" Content="Post Sensor Data" />
            <Button Click="{x:Bind ViewModel.PostDatabase}" Content="Post Database" />
            <Button x:Name="Analytics" Content="Analytics Mode" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,753,0" Click="Analytics_Click"/>
        </StackPanel>
    </Grid>
</Page>