<Page x:Class="Agronomist.Views.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:Agronomist.Views"
      mc:Ignorable="d">
    
    
    <Grid Background="#EBEBEB" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollMode="Auto" 
          ScrollViewer.HorizontalScrollMode="Disabled" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <GridView Background="#D7D7D7" FontSize="36" BorderThickness="5" BorderBrush="#EBEBEB" 
            ScrollViewer.VerticalScrollMode="Disabled" Foreground="#FF515C6B"
            Header="Solution"            
            Padding="10,10,10,10"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="0"
            Grid.RowSpan="4"
            ItemsSource="{x:Bind ViewModel.WaterCards, Mode=OneWay}">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <views:LiveCard
                        ViewModel="{Binding}"
                        Margin="5" />
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        <GridView Background="#D7D7D7" FontSize="36"  BorderThickness="5" BorderBrush="#EBEBEB"
            ScrollViewer.VerticalScrollMode="Disabled" Foreground="#FF515C6B"
            Header="Plants" 
            Padding="10,10,10,10"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Grid.Row="0"
            Grid.RowSpan="2"
            ItemsSource="{x:Bind ViewModel.PlantCards, Mode=OneWay}">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <views:LiveCard
                        ViewModel="{Binding}"
                        Margin="5" />
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        <GridView  Background="#D7D7D7" FontSize="36" BorderThickness="5" BorderBrush="#EBEBEB" 
            ScrollViewer.VerticalScrollMode="Disabled" Foreground="#FF515C6B"
            Header="Ambient"
            Padding="10,10,10,10"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Grid.Row="2"
            Grid.RowSpan="2"
            ItemsSource="{x:Bind ViewModel.AmbientCards, Mode=OneWay}">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <views:LiveCard
                        ViewModel="{Binding}"
                        Margin="5" />
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>