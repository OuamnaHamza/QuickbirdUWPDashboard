<Page x:Class="TheDream.Views.CropRunHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:TheDream.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Page.Resources>
        <CollectionViewSource x:Name="cvsWaterTankReadings"
                              IsSourceGrouped="False" />
        <CollectionViewSource x:Name="cvsPlantReadings"
                              IsSourceGrouped="False" />
        <CollectionViewSource x:Name="cvsAmbientReadings"
                              IsSourceGrouped="False" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="72" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="72" />
            <ColumnDefinition />
            <ColumnDefinition Width="72" />
            <ColumnDefinition />
            <ColumnDefinition Width="36" />
        </Grid.ColumnDefinitions>

        <local:LiveCard Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Left"/>
    </Grid>
</Page>
